      },
      "indexes": [
        {
          "name": "openid_index",
          "keys": [{"openid": 1}]
        },
        {
          "name": "status_index",
          "keys": [{"status": 1}]
        },
        {
          "name": "createTime_index",
          "keys": [{"createTime": -1}]
        }
      ]
    },
    {
      "name": "lottery_chances",
