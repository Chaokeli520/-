/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 公共样式 */
.btn {
  margin-top: 30rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.btn:hover {
  background-color: #06ad56;
}

.text-center {
  text-align: center;
}

.margin-top {
  margin-top: 20rpx;
}

.padding {
  padding: 20rpx;
}

/* 页面标题样式 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  margin: 20rpx;
  padding: 30rpx;
}