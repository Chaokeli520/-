/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 公共样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.btn {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #1aad19;
  color: white;
  text-align: center;
  border-radius: 8rpx;
}

.btn:active {
  background-color: #179b16;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}