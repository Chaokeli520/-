/**pages/home/home.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  padding-bottom: 120rpx;
}

/* 轮播图样式 */
.banner-section {
  margin-bottom: 30rpx;
}

.banner-swiper {
  height: 400rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 0 0 30rpx 30rpx;
}

/* 公司介绍卡片 */
.company-card {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(139, 69, 19, 0.15);
}

.card-header {
  margin-bottom: 30rpx;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
}

.company-location {
  font-size: 28rpx;
  color: #D2691E;
}

.company-description {
  font-size: 30rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 40rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-detail, .btn-contact {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-detail {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
}

.btn-contact {
  background: linear-gradient(135deg, #D2691E 0%, #FFB347 100%);
  color: white;
}

/* 特色功能展示 */
.features-section {
  margin: 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 30rpx;
  text-align: center;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.feature-item {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(139, 69, 19, 0.1);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

/* 茶语堂推广卡片 */
.tea-promotion-card {
  margin: 30rpx 20rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.tea-promotion-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.tea-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  z-index: 1;
  position: relative;
}

.tea-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.tea-title {
  font-size: 36rpx;
  font-weight: bold;
}

.tea-description {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  z-index: 1;
  position: relative;
}

.tea-highlight {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 15rpx;
  z-index: 1;
  position: relative;
}

.tea-actions {
  display: flex;
  gap: 20rpx;
  z-index: 1;
  position: relative;
}

.btn-order, .btn-lottery {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-order {
  background: white;
  color: #8B4513;
}

.btn-lottery {
  background: rgba(255,255,255,0.2);
  color: white;
  border: 2rpx solid white;
}

/* 模态框样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(50rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  background: #8B4513;
  color: white;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
}

.modal-body {
  padding: 40rpx;
  max-height: 60vh;
}

/* 企业详情样式 */
.detail-section {
  margin-bottom: 40rpx;
}

.detail-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
}

.detail-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.advantages-list {
  
}

.advantage-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 25rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.advantage-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.advantage-text {
  flex: 1;
}

.advantage-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 8rpx;
}

.advantage-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 联系我们样式 */
.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  transition: background 0.3s;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-item:active {
  background: #f5f5f5;
}

.contact-icon {
  font-size: 40rpx;
  margin-right: 25rpx;
  width: 60rpx;
  text-align: center;
}

.contact-text {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.contact-action {
  font-size: 24rpx;
  color: #8B4513;
  background: rgba(139, 69, 19, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}