/**pages/index/index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.userinfo-btn {
  width: 200rpx;
  margin: 20rpx auto;
  color: white;
  background: linear-gradient(45deg, #07c160, #1aad19);
  border-radius: 50rpx;
}

.userinfo-tip {
  color: #999;
  font-size: 24rpx;
  margin-top: 30rpx;
}

.usermotto {
  margin-top: 50rpx;
  text-align: center;
}

.user-motto {
  font-size: 28rpx;
  color: #666;
}

.function-area {
  width: 100%;
  margin-top: 50rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}