/**lottery.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 20rpx;
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 15rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
}

/* 转盘区域 */
.lottery-section {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.wheel-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
}

.wheel {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  position: relative;
  border: 8rpx solid #FFD700;
  box-shadow: 0 0 30rpx rgba(255, 215, 0, 0.5);
  transition: transform 3s cubic-bezier(0.23, 1, 0.32, 1);
}

.prize-item {
  position: absolute;
  width: 50%;
  height: 50%;
  transform-origin: 100% 100%;
  overflow: hidden;
  clip-path: polygon(0 0, 100% 0, 50% 100%);
}

.prize-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 40rpx;
  transform-origin: 50% 100%;
}

.prize-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.prize-name {
  font-size: 20rpx;
  color: white;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.5);
}

.pointer {
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 60rpx;
  z-index: 10;
  filter: drop-shadow(2rpx 2rpx 4rpx rgba(0,0,0,0.3));
}

.lottery-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #FF6B35, #F7931E);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border: 4rpx solid white;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.3);
  z-index: 20;
  transition: all 0.3s;
}

.lottery-btn:disabled {
  background: #ccc;
  color: #666;
}

.lottery-btn.drawing {
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: translate(-50%, -50%) scale(1); }
  50% { transform: translate(-50%, -50%) scale(1.1); }
  100% { transform: translate(-50%, -50%) scale(1); }
}

/* 操作区域 */
.actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.action-btn {
  background: rgba(255,255,255,0.2);
  color: white;
  border: 2rpx solid rgba(255,255,255,0.3);
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

.action-btn:active {
  background: rgba(255,255,255,0.3);
}

/* 中奖记录 */
.records-section {
  background: rgba(255,255,255,0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  backdrop-filter: blur(10rpx);
}

.section-title {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.records-list {
  max-height: 400rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
}

.record-prize {
  font-size: 28rpx;
  color: white;
  display: block;
  margin-bottom: 8rpx;
}

.record-date {
  font-size: 22rpx;
  color: rgba(255,255,255,0.7);
}

.use-btn {
  background: #FF6B35;
  color: white;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border: none;
}

.use-btn.used {
  background: #999;
}

/* 中奖结果弹窗 */
.result-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.result-dialog {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 30rpx;
  overflow: hidden;
  animation: bounceIn 0.5s;
}

@keyframes bounceIn {
  0% { transform: scale(0.3); opacity: 0; }
  50% { transform: scale(1.05); }
  70% { transform: scale(0.9); }
  100% { transform: scale(1); opacity: 1; }
}

.result-header {
  background: linear-gradient(45deg, #FF6B35, #F7931E);
  padding: 40rpx;
  text-align: center;
}

.result-title {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
}

.result-content {
  padding: 60rpx 40rpx;
  text-align: center;
}

.prize-display {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.prize-big-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.prize-big-name {
  font-size: 40rpx;
  color: #FF6B35;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.prize-big-desc {
  font-size: 28rpx;
  color: #666;
}

.result-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.confirm-btn {
  width: 100%;
  background: #FF6B35;
  color: white;
  border-radius: 25rpx;
  height: 80rpx;
  font-size: 32rpx;
  border: none;
}