<!--pages/logs/logs.wxml-->
<view class="container">
  <view class="header">
    <view class="title">启动日志</view>
    <button class="clear-btn" bindtap="clearLogs">清空日志</button>
  </view>
  
  <view class="logs-container">
    <block wx:for="{{logs}}" wx:key="timeStamp" wx:for-item="log">
      <view class="log-item">
        <view class="log-date">{{log.date}}</view>
        <view class="log-timestamp">时间戳: {{log.timeStamp}}</view>
      </view>
    </block>
    
    <view wx:if="{{logs.length === 0}}" class="empty-state">
      <text class="empty-text">暂无日志记录</text>
    </view>
  </view>
</view>