/**logs.wxss**/
.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.clear-btn {
  background-color: #ff4757;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  border: none;
}

.clear-btn:active {
  background-color: #ff3742;
}

.logs-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.log-item {
  background-color: white;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border-left: 4rpx solid #1aad19;
}

.log-date {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.log-timestamp {
  font-size: 26rpx;
  color: #666;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: white;
  border-radius: 12rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}