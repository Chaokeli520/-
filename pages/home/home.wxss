/**home.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f5f5f5, #ffffff);
}

/* 品牌头部 */
.brand-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #8B4513, #A0522D);
  color: white;
}

.brand-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.logo-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: white;
}

.brand-info {
  text-align: center;
}

.brand-name {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.brand-slogan {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 轮播图 */
.banner-section {
  margin: 30rpx 20rpx;
}

.banner-swiper {
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.banner-item {
  height: 100%;
}

.banner-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, #FF6B35, #F7931E);
  color: white;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 公司介绍 */
.company-intro {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
  text-align: center;
}

.intro-content {
  margin-bottom: 30rpx;
}

.intro-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.features {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF8DC;
  border-radius: 15rpx;
  border: 2rpx solid #DEB887;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.feature-text {
  flex: 1;
}

.feature-title {
  font-size: 26rpx;
  color: #8B4513;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: #666;
}

/* 热门推荐 */
.hot-products {
  margin: 30rpx 20rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.product-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 15rpx;
  background: #FAFAFA;
}

.product-image {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(45deg, #DEB887, #D2B48C);
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.product-info {
  text-align: center;
}

.product-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.product-price-section {
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: bold;
  margin-right: 10rpx;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.product-stats {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #666;
}

.product-sales {
  
}

.product-rating {
  color: #FF6B35;
}

/* 点餐按钮 */
.order-section {
  margin: 40rpx 20rpx;
  text-align: center;
}

.order-btn {
  width: 80%;
  height: 100rpx;
  background: linear-gradient(45deg, #FF6B35, #F7931E);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.3);
}

.order-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 53, 0.3);
}

/* 门店信息 */
.store-info {
  margin: 30rpx 20rpx 60rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.info-label {
  color: #8B4513;
  font-weight: bold;
  min-width: 120rpx;
}

.info-value {
  color: #666;
  flex: 1;
}

.info-arrow {
  color: #8B4513;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 快速入口 */
.quick-actions {
  margin: 40rpx 20rpx 60rpx;
  text-align: center;
}

.quick-btn {
  background: linear-gradient(45deg, #FF6B35, #F7931E);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 25rpx;
  border: none;
  padding: 20rpx 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.3);
  margin: 0 10rpx;
}

.quick-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 107, 53, 0.3);
}

.lottery-btn {
  background: linear-gradient(45deg, #9C27B0, #E91E63);
  box-shadow: 0 8rpx 20rpx rgba(156, 39, 176, 0.3);
}

.lottery-btn:active {
  box-shadow: 0 4rpx 10rpx rgba(156, 39, 176, 0.3);
}