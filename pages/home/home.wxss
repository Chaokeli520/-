/**pages/home/home.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
}

/* 轮播图样式 */
.banner-section {
  margin-bottom: 30rpx;
}

.banner-swiper {
  height: 400rpx;
  width: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 0 0 30rpx 30rpx;
}

/* 公司介绍卡片 */
.company-card {
  margin: 30rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(139, 69, 19, 0.15);
}

.card-header {
  margin-bottom: 30rpx;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
}

.company-location {
  font-size: 28rpx;
  color: #D2691E;
}

.company-description {
  font-size: 30rpx;
  line-height: 1.6;
  color: #5D4E37;
  margin-bottom: 40rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-detail, .btn-contact {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-detail {
  background: linear-gradient(45deg, #8B4513, #A0522D);
  color: white;
}

.btn-contact {
  background: linear-gradient(45deg, #D2691E, #DAA520);
  color: white;
}

/* 特色功能展示 */
.features-section {
  margin: 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
  text-align: center;
  margin-bottom: 30rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 15rpx rgba(139, 69, 19, 0.1);
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 茶语堂推广卡片 */
.tea-promotion-card {
  margin: 30rpx 20rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  border-radius: 25rpx;
  padding: 40rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.tea-promotion-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.tea-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tea-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.tea-name {
  font-size: 32rpx;
  font-weight: bold;
}

.tea-description {
  font-size: 28rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
  opacity: 0.9;
}

.tea-highlight {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.highlight-text {
  font-size: 26rpx;
  text-align: center;
  font-weight: bold;
}

.order-btn {
  background: linear-gradient(45deg, #DAA520, #FFD700);
  border-radius: 50rpx;
  height: 90rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(218, 165, 32, 0.4);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.btn-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #8B4513;
}

.btn-icon {
  font-size: 28rpx;
}

/* 底部装饰 */
.bottom-decoration {
  margin: 50rpx 20rpx;
  padding: 40rpx;
  text-align: center;
}

.decoration-text {
  font-size: 24rpx;
  color: #8B4513;
  opacity: 0.7;
  margin-bottom: 20rpx;
}

.decoration-line {
  width: 100rpx;
  height: 4rpx;
  background: linear-gradient(45deg, #8B4513, #D2691E);
  border-radius: 2rpx;
  margin: 0 auto;
}

/* 按钮点击效果 */
button:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}