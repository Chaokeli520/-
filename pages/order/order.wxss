/**pages/order/order.wxss**/
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  text-align: center;
  padding: 40rpx 20rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 20rpx;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.shop-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 分类导航 */
.category-nav {
  margin: 20rpx 0;
  background: white;
  border-radius: 15rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(139, 69, 19, 0.1);
}

.category-scroll {
  padding: 20rpx 0;
}

.category-list {
  display: flex;
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-item {
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  color: #8B4513;
  background: #f5f5f5;
  flex-shrink: 0;
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  font-weight: bold;
}

/* 商品列表 */
.products-section {
  padding: 20rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.product-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(139, 69, 19, 0.12);
  position: relative;
  transition: transform 0.3s, box-shadow 0.3s;
}

.product-card:active {
  transform: scale(0.98);
}

.hot-tag {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  background: linear-gradient(135deg, #FF4500 0%, #FF6347 100%);
  color: white;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  z-index: 1;
  box-shadow: 0 4rpx 10rpx rgba(255, 69, 0, 0.3);
}

.product-image-wrapper {
  height: 200rpx;
  position: relative;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 25rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.product-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #D2691E;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(139, 69, 19, 0.3);
}

/* 购物车浮动按钮 */
.cart-float-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 15rpx;
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(139, 69, 19, 0.4);
  z-index: 100;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
}

.cart-icon {
  font-size: 36rpx;
}

.cart-count {
  background: #FF4500;
  color: white;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  min-width: 30rpx;
  text-align: center;
  font-weight: bold;
}

.cart-amount {
  font-size: 28rpx;
  font-weight: bold;
}

/* 购物车模态框 */
.cart-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.cart-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.cart-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.cart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
}

.cart-actions {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.clear-btn {
  background: none;
  border: 1rpx solid #ddd;
  color: #666;
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
}

.close-btn {
  background: none;
  border: none;
  font-size: 32rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cart-list {
  flex: 1;
  max-height: 50vh;
  padding: 0 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  gap: 20rpx;
}

.cart-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.item-image image {
  width: 100%;
  height: 100%;
}

.item-info {
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-price {
  font-size: 24rpx;
  color: #D2691E;
  font-weight: bold;
}

.item-controls {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  background: white;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8B4513;
}

.quantity-btn.decrease {
  color: #999;
}

.quantity-btn.increase {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  border: none;
}

.quantity {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.item-total {
  font-size: 28rpx;
  font-weight: bold;
  color: #D2691E;
  min-width: 100rpx;
  text-align: right;
}

.cart-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #eee;
  background: #fafafa;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.total-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.total-text {
  font-size: 28rpx;
  color: #666;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #D2691E;
}

.submit-btn {
  background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  padding: 25rpx 40rpx;
  border-radius: 30rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(139, 69, 19, 0.3);
}